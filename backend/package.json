{
    "name": "backend",
    "version": "1.0.0",
    "private": true,
    "description": "Lead Engine CRE Backend API - RTB Platform",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint src --ext .ts",
        "test": "jest",
        "test:unit": "jest tests/unit --verbose",
        "test:e2e": "jest tests/e2e --verbose",
        "test:coverage": "jest --coverage",
        "test:compliance": "jest tests/compliance --verbose",
        "test:security": "jest tests/security --verbose",
        "test:load": "artillery run tests/load-test.yml",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:generate": "prisma generate",
        "db:studio": "prisma studio",
        "db:seed": "cross-env TEST_MODE=true ts-node prisma/seed.ts",
        "db:clear-mock": "cross-env TEST_MODE=true ts-node prisma/clear.ts"
    },
    "dependencies": {
        "@prisma/client": "^5.10.2",
        "artillery-plugin-expect": "^2.24.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "ethers": "^6.11.1",
        "express": "^4.18.3",
        "express-rate-limit": "^7.2.0",
        "helmet": "^7.1.0",
        "js-yaml": "^4.1.1",
        "jsonwebtoken": "^9.0.2",
        "socket.io": "^4.7.4",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^9.0.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.3.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.11.24",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^9.0.8",
        "artillery": "^2.0.5",
        "cross-env": "^10.1.0",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "prisma": "^5.10.2",
        "socket.io-client": "^4.7.4",
        "supertest": "^7.2.2",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.2"
    }
}
