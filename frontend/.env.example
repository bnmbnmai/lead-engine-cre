# Frontend Environment Variables (Vite)
# For local development: copy to .env.local
# For Vercel: set these in the Vercel dashboard
# All vars must be prefixed with VITE_ for Vite to expose them.

# ── API ──────────────────────────────────────────────────
VITE_API_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001

# ── Wallet / RPC ─────────────────────────────────────────
VITE_WALLETCONNECT_PROJECT_ID=
VITE_ALCHEMY_API_KEY=
VITE_RPC_URL_SEPOLIA=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
VITE_RPC_URL_BASE_SEPOLIA=https://sepolia.base.org
VITE_DEFAULT_CHAIN_ID=84532
VITE_ENABLE_TESTNET=true

# ── Contract Addresses (Sepolia) ─────────────────────────
VITE_MARKETPLACE_ADDRESS_SEPOLIA=
VITE_LEAD_NFT_ADDRESS_SEPOLIA=
VITE_ESCROW_ADDRESS_SEPOLIA=
VITE_ACE_ADDRESS_SEPOLIA=
VITE_VERTICAL_NFT_ADDRESS_SEPOLIA=

# ── Contract Addresses (Base Sepolia) ────────────────────
VITE_MARKETPLACE_ADDRESS_BASE=
VITE_LEAD_NFT_ADDRESS_BASE=
VITE_ESCROW_ADDRESS_BASE=
VITE_ACE_ADDRESS_BASE=
VITE_VERTICAL_NFT_ADDRESS_BASE=

# ── Block Explorer ───────────────────────────────────────
VITE_BLOCK_EXPLORER_URL=https://sepolia.basescan.org

# ── Platform ─────────────────────────────────────────────
VITE_PLATFORM_WALLET_ADDRESS=

# ── Feature Flags ────────────────────────────────────────
VITE_NFT_ENABLED=true
VITE_DEMO_MODE=false
VITE_USE_MOCK_DATA=false

# ── Monitoring (optional) ────────────────────────────────
# VITE_SENTRY_DSN=

